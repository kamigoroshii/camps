# Database Configuration
POSTGRES_USER=campus_user
POSTGRES_PASSWORD=campus_pass_change_me
POSTGRES_DB=campus_portal
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB Configuration
MONGO_USER=campus_user
MONGO_PASSWORD=campus_pass_change_me
MONGO_DB=campus_documents
MONGO_HOST=localhost
MONGO_PORT=27017

# Redis Configuration
REDIS_PASSWORD=campus_pass_change_me
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Configuration
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png
UPLOAD_DIR=./uploads

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@campus-portal.edu
SMTP_FROM_NAME=Campus Portal

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# OAuth Configuration
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback
OAUTH_AUTHORIZATION_URL=https://your-sso-provider.com/oauth/authorize
OAUTH_TOKEN_URL=https://your-sso-provider.com/oauth/token
OAUTH_USERINFO_URL=https://your-sso-provider.com/oauth/userinfo

# SAML Configuration
SAML_IDP_URL=https://your-idp.com/saml/sso
SAML_IDP_ENTITY_ID=https://your-idp.com
SAML_SP_ENTITY_ID=campus-portal
SAML_CERT_PATH=./certs/saml.crt
SAML_KEY_PATH=./certs/saml.key

# LDAP Configuration
LDAP_SERVER=ldap://ldap.campus.edu
LDAP_PORT=389
LDAP_BASE_DN=dc=campus,dc=edu
LDAP_BIND_DN=cn=admin,dc=campus,dc=edu
LDAP_BIND_PASSWORD=your-ldap-password
LDAP_USE_SSL=false

# OCR Configuration
OCR_ENGINE=tesseract  # tesseract, google_vision
GOOGLE_VISION_API_KEY=your-google-vision-api-key
TESSERACT_LANG=eng

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
AI_MODEL_NAME=gpt-3.5-turbo

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
GRAFANA_PASSWORD=admin_change_me

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=campus-portal-documents

# Feature Flags
ENABLE_AI_ROUTING=true
ENABLE_OCR=true
ENABLE_CHAT_ASSISTANT=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# SLA Configuration
DEFAULT_SLA_HOURS=48
URGENT_SLA_HOURS=24
ESCALATION_THRESHOLD_HOURS=36

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
